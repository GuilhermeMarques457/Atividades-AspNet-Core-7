<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/general.css" rel="stylesheet" />
    <link href="~/style.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <header class="header-container">
            <div class="flex flex-spaced">
                <div class="logo-box">
                    <a class="logo-text" asp-action="index" asp-controller="home">
                        <i class="fa-solid fa-money-bill-trend-up"></i>
                        Stocks
                    </a>
                    
                </div>
                <nav class="nav-item">
                    <ul class="list nav-list">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Trade" class="nav-item">Create Orders</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="SeeOrders" asp-controller="Trade" class="nav-item">See Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-full">Login</a>
                        </li>
                    </ul>
                    
                    
                    
                </nav>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>
        
    </div>
</body>
</html>

